        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rollover every day -->
            <fileNamePattern>logs/%d{yyyy-MM-dd}/app_INFO.%d{yyyy-MM-dd}.log</fileNamePattern>
